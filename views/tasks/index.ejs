<% include ../partials/header %>

<h1>Movie Task List</h1>

<p>Movies to watch on the next 7 days:</p>

<table id="table_id" class="display">
    <thead>
        <tr>
            <th>Title</th>
            <th>Due</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        <% movies.forEach(function(movie) { %>
            <% if(movie.status === "watched") return; %>
            <tr>
                <td><%= movie.movie %></td>
                <!-- <% console.log(movie.due); console.log(rn); %> -->
                <% if(movie.due > rn) {%>
                    <td><%= movie.due %></td>
                <%} else {%>
                    <td class="late"><%= movie.due %></td>
                <% } %>
                <!-- toDateString() -->
                <td>
                    <% if(movie.status) { %>
                        <%= movie.status %>
                    <% } else { %>
                        plan to watch
                    <% } %>
                </td>
            </tr>
        <% }); %>
    </tbody>
</table>

<script>
    $(document).ready( function () {
        $('#table_id').DataTable();
    } );
</script>

<% include ../partials/footer %>