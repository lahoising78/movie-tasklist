<% include ./partials/header %>

<h1>Results</h1>

<table id="table_id" class="display">
    <thead>
        <tr>
            <th><strong>Title</strong></th>
            <th><strong>Year</strong></th>
            <th><strong>Type</strong></th>
            <th><strong>Add</strong></th>
        </tr>
    </thead>
    <tbody>
        <% if(data.Search) {data.Search.forEach(function(movie){ %>
            <tr>
                <td><%= movie.Title %></td>
                <td><%= movie.Year %></td>
                <td><%= movie.Type %></td>
                <td>
                    <a class="btn btn-primary" href="/new/<%= movie.imdbID %>">Add</a>
                </td>
            </tr>
        <% }); }%>
    </tbody>
</table>

<script>
    $(document).ready( function () {
        $('#table_id').DataTable();
    } );
</script>
<% include ./partials/footer %>